<Window x:Class="VenueFlow.WeddingDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        TextElement.Foreground="{DynamicResource MaterialDesign.Brush.Foreground}"
        Background="{DynamicResource MaterialDesign.Brush.Background}"
        FontFamily="{DynamicResource MaterialDesign.Font}"
        Title="Wedding Details" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="0,0,0,20">
            <Button DockPanel.Dock="Right" Click="BtnSave_Click" 
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    materialDesign:ButtonAssist.CornerRadius="15"
                    ToolTip="Save Changes">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="ContentSave" Margin="0,0,5,0"/>
                    <TextBlock Text="SAVE CHANGES"/>
                </StackPanel>
            </Button>

            <DatePicker x:Name="WeddingDatePicker" DockPanel.Dock="Right" 
                        Width="150" Margin="0,0,20,0" 
                        VerticalAlignment="Center"
                        materialDesign:HintAssist.Hint="Wedding Date" 
                        Style="{StaticResource MaterialDesignOutlinedDatePicker}"/>

            <TextBox x:Name="TxtWeddingName" 
                     FontSize="24" FontWeight="Bold" 
                     VerticalAlignment="Center"
                     BorderThickness="0,0,0,1"
                     materialDesign:HintAssist.Hint="Wedding Name"/>
        </DockPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <materialDesign:Card Grid.Column="0" Margin="0,0,10,0" Padding="10" UniformCornerRadius="8">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" Text="Guest List" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,10"/>

                    <TextBox DockPanel.Dock="Top" Margin="0,0,0,10"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:HintAssist.Hint="Search guests..."
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             TextChanged="TxtSearch_TextChanged"/> 

                    <ListView x:Name="ListGuests" ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Name" DisplayMemberBinding="{Binding GuestName}" Width="250"/>
                                <GridViewColumn Header="Group" DisplayMemberBinding="{Binding FamilyGroup}" Width="140"/>
                                <GridViewColumn Header="Meal" DisplayMemberBinding="{Binding MenuOption.OptionName}" Width="140"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </DockPanel>
            </materialDesign:Card>

            <StackPanel Grid.Column="1" Margin="10,0,0,0">

                <TextBlock Text="Available Rooms" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,10"/>
                <TextBlock Text="* Only rooms with enough capacity are shown" FontSize="11" Foreground="Gray" Margin="0,-5,0,15"/>

                <RadioButton GroupName="Rooms" x:Name="RoomSmall" Tag="22" Margin="0,0,0,10" Style="{StaticResource MaterialDesignChoiceChipOutlineRadioButton}">
                    <DockPanel Width="250">
                        <materialDesign:PackIcon Kind="HomeFloor1" VerticalAlignment="Center" Margin="5"/>
                        <TextBlock Text="Intimate Suite (Capacity: 22)" VerticalAlignment="Center" Margin="10,0"/>
                    </DockPanel>
                </RadioButton>

                <RadioButton GroupName="Rooms" x:Name="RoomMedium" Tag="42" Margin="0,0,0,10" Style="{StaticResource MaterialDesignChoiceChipOutlineRadioButton}">
                    <DockPanel Width="250">
                        <materialDesign:PackIcon Kind="HomeFloor2" VerticalAlignment="Center" Margin="5"/>
                        <TextBlock Text="Garden Hall (Capacity: 42)" VerticalAlignment="Center" Margin="10,0"/>
                    </DockPanel>
                </RadioButton>

                <RadioButton GroupName="Rooms" x:Name="RoomLarge" Tag="62" Margin="0,0,0,10" Style="{StaticResource MaterialDesignChoiceChipOutlineRadioButton}">
                    <DockPanel Width="250">
                        <materialDesign:PackIcon Kind="HomeFloor3" VerticalAlignment="Center" Margin="5"/>
                        <TextBlock Text="Grand Ballroom (Capacity: 62)" VerticalAlignment="Center" Margin="10,0"/>
                    </DockPanel>
                </RadioButton>

                <Button Margin="0,40,0,0" Height="50"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        materialDesign:ButtonAssist.CornerRadius="25"
                        Click="BtnSeatingPlan_Click">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Seat" Margin="0,0,10,0"/>
                        <TextBlock Text="OPEN SEATING PLAN"/>
                    </StackPanel>
                </Button>

            </StackPanel>
        </Grid>
    </Grid>
</Window>