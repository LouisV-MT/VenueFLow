<Window x:Class="VenueFlow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        TextElement.Foreground="{DynamicResource MaterialDesign.Brush.Foreground}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesign.Brush.Background}"
        FontFamily="{DynamicResource MaterialDesign.Font}"
        Title="VenueFlow - Dashboard" Height="600" Width="900">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <materialDesign:Card Grid.Column="0" Margin="10" Padding="10" UniformCornerRadius="10">
            <DockPanel>
                <DockPanel DockPanel.Dock="Top" Margin="5">
                    <Button DockPanel.Dock="Right" 
                            Name="BtnDeleteSelected" 
                            Click="BtnDeleteSelected_Click"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            materialDesign:ButtonAssist.CornerRadius="15"
                            Foreground="Red" 
                            BorderBrush="Red"
                            BorderThickness="1"
                            Padding="15,4" 
                            Height="32"
                            ToolTip="Delete checked weddings">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Delete" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="DELETE SELECTED" FontWeight="SemiBold" FontSize="11" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <TextBlock Text="Your Weddings" Style="{StaticResource MaterialDesignHeadline5TextBlock}" VerticalAlignment="Center"/>
                </DockPanel>

                <ListView Name="WeddingsList" Margin="0,10,0,0">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="{DynamicResource MaterialDesign.Brush.Divider}" BorderThickness="0,0,0,1" Padding="10" 
                                    Background="Transparent"
                                    Cursor="Hand"
                                    MouseLeftButtonUp="WeddingItem_MouseLeftButtonUp">

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <CheckBox Grid.Column="0" 
                                              IsChecked="{Binding IsSelected}" 
                                              VerticalAlignment="Center" Margin="0,0,10,0"/>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding Wedding.Name}" FontWeight="Bold" FontSize="16"/>
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Calendar" Width="12" Height="12" VerticalAlignment="Center" Margin="0,0,4,0" Foreground="Gray"/>
                                            <TextBlock Text="{Binding Wedding.Date, StringFormat=d}" Foreground="Gray" FontSize="12"/>
                                            <TextBlock Text=" • " Foreground="Gray"/>
                                            <materialDesign:PackIcon Kind="AccountGroup" Width="12" Height="12" VerticalAlignment="Center" Margin="0,0,4,0" Foreground="Gray"/>
                                            <TextBlock Text="{Binding Wedding.RoomCapacity, StringFormat='Capacity: {0}'}" Foreground="Gray" FontSize="12"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </DockPanel>
        </materialDesign:Card>

        <materialDesign:Card Grid.Column="1" Margin="10" Padding="20" UniformCornerRadius="10" VerticalAlignment="Center">
            <StackPanel HorizontalAlignment="Center">
                <materialDesign:PackIcon Kind="Ring" Width="50" Height="50" HorizontalAlignment="Center" Foreground="{DynamicResource MaterialDesign.Brush.Primary}"/>

                <TextBlock Text="Start a New Event" Style="{StaticResource MaterialDesignHeadline4TextBlock}" HorizontalAlignment="Center" Margin="0,10,0,20"/>

                <TextBlock Text="Import a guest list to automatically create a wedding." 
                           TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Center" Margin="0,0,0,20"/>

                <Button Name="BtnImport" Click="BtnImport_Click" 
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        materialDesign:ButtonAssist.CornerRadius="25"
                        Height="50"
                        Width="220"
                        ToolTip="File must have columns: FullName, FamilyGroup, MealChoice, Allergies, Proximity">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="MicrosoftExcel" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Text="IMPORT EXCEL FILE" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</Window>