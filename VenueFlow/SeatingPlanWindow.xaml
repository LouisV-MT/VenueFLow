<Window x:Class="VenueFlow.SeatingPlanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Seating Plan Visualization and Manual Adjustment" Height="700" Width="1200">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT PANEL: Unassigned Guests for Drag & Drop -->
        <StackPanel Grid.Column="0" Margin="10">
            <TextBlock Text="Unassigned Guests" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="Drag guests from here onto open seats on the canvas." 
                       TextWrapping="Wrap" FontStyle="Italic" Margin="0,0,0,10"/>

            <!-- ListBox will be populated with unseated guests -->
            <ListBox x:Name="UnassignedGuestsListBox" Height="600" 
                     AllowDrop="True" 
                     Drop="SeatingCanvas_Drop" 
                     PreviewMouseLeftButtonDown="UnassignedGuestsListBox_PreviewMouseLeftButtonDown"
                     MouseMove="UnassignedGuestsListBox_MouseMove"/>

        </StackPanel>

        <!-- RIGHT PANEL: Seating Visualization Canvas -->
        <Grid Grid.Column="1" Background="#F0F0F0" Margin="10">
            <TextBlock Text="Floor Plan Canvas" FontSize="20" FontWeight="Bold" 
                       VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10"/>

            <!-- CANVAS for drawing tables and seats dynamically -->
            <Canvas x:Name="SeatingCanvas" Margin="10,40,10,10" 
                    Background="White"
                    AllowDrop="True" 
                    Drop="SeatingCanvas_Drop"/>
        </Grid>
    </Grid>
</Window>