<Window x:Class="VenueFlow.SeatingPlanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Seating Plan Visualization and Manual Adjustment" Height="700" Width="1200">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="10">
            <TextBlock Text="Unassigned Guests" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="Drag guests from here onto open seats on the canvas. Manual assignments check capacity and MUST NOT SIT WITH rules." 
                       TextWrapping="Wrap" FontStyle="Italic" Margin="0,0,0,10"/>

            <ListBox x:Name="UnassignedGuestsListBox" Height="600" 
                     AllowDrop="True" 
                     Drop="SeatingCanvas_Drop" 
                     PreviewMouseLeftButtonDown="UnassignedGuestsListBox_PreviewMouseLeftButtonDown"
                     MouseMove="UnassignedGuestsListBox_MouseMove"/>

        </StackPanel>

        <Grid Grid.Column="1" Background="#F0F0F0" Margin="10">

            <DockPanel VerticalAlignment="Top" Margin="10,10,20,5" Panel.ZIndex="1">
                <TextBlock Text="Floor Plan Canvas" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>

                <Button DockPanel.Dock="Right" HorizontalAlignment="Right"
                        Click="BtnExport_Click"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Height="30" Padding="10,0" Margin="10,0,0,0"
                        materialDesign:ButtonAssist.CornerRadius="15">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Printer" Margin="0,0,5,0" VerticalAlignment="Center"/>
                        <TextBlock Text="PRINT / EXPORT" FontSize="12" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </DockPanel>

            <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                          VerticalScrollBarVisibility="Auto" 
                          PanningMode="Both"
                          Margin="0,50,0,0">
                <Canvas x:Name="SeatingCanvas" 
                        Background="White"
                        AllowDrop="True" 
                        Drop="SeatingCanvas_Drop"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"/>

            </ScrollViewer>
        </Grid>
    </Grid>
</Window>